{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["playwright.config.ts", "tests/**/*.ts", "src/**/*.ts"]
}