{
  "name": "@cucumber/pretty-formatter",
  "version": "3.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cucumber/pretty-formatter.git"
  },
  "author": "David Goss",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf dist",
    "fix": "eslint --ext ts --max-warnings 0 src --fix src && prettier --write src",
    "lint": "eslint --ext ts --max-warnings 0 src && prettier --check src",
    "test": "mocha \"src/**/*.spec.ts\"",
    "update-expected-files": "UPDATE_EXPECTED_FILES=true npm test",
    "prepublishOnly": "tsc --build tsconfig.build.json"
  },
  "dependencies": {
    "@cucumber/query": "15.0.1",
    "luxon": "^3.7.2"
  },
  "peerDependencies": {
    "@cucumber/messages": "*"
  },
  "devDependencies": {
    "@cucumber/message-streams": "^4.0.1",
    "@cucumber/messages": "32.0.1",
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@tsconfig/recommended": "^1.0.13",
    "@types/chai": "^5.0.0",
    "@types/luxon": "^3.7.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "22.19.7",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "chai": "^6.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "^17.0.0",
    "globby": "^16.0.0",
    "mocha": "^11.0.0",
    "prettier": "3.8.1",
    "ts-node": "^10.9.1",
    "typescript": "5.9.3"
  }
}
